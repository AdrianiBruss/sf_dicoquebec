</div><!--/.sidebar-offcanvas-->
<script>

    $(function(){

        var $tarms = $('.tarm-item');
        var $voc = $('#voc-input');
        var $sac = $('#sac-input');
        var $def = $('#def-input');

        // filtre tarms
        $('#filter-input').on('input', function(){

            $tarms.filter(function(index){
                return getWords(index, convertToSlug($(this).val().toLowerCase()));
            }).css('display', 'none');

        });


        function getWords(index, tarm){
            return findLetter($tarms.eq(index).attr('data-slug'),tarm);
        }

        function getCat(index){
            if($tarms.eq(index).attr('data-cat') != 'v'){
                return true;
            }
        }

        function findLetter(string, letter){
            return (string.indexOf(letter) != -1);

        }

        function convertToSlug(Text)
        {
            return Text
                    .toLowerCase()
                    .replace(/ /g,'-')
                    .replace(/[^\w-]+/g,'');
        }

    })

</script>